<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_cart">
    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.amazonapp.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/nav_orders"
        android:name="com.example.amazonapp.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.amazonapp.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />
    <activity
        android:id="@+id/nav_settings"
        android:name="com.example.amazonapp.Settings"
        android:label="activity_settings"
        tools:layout="@layout/activity_settings" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.amazonapp.LogoutFragment"
        android:label="fragment_logout"
        tools:layout="@layout/fragment_logout" />

</navigation>